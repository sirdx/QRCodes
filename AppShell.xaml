<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QRCodes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:views="clr-namespace:QRCodes.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Creator"
            Icon="{mi:Fluent Icon=QrCode24}"
            ContentTemplate="{DataTemplate views:CreatorPage}"
            Route="CreatorPage" />        
        <ShellContent
            Title="List"
            Icon="{mi:Fluent Icon=List24}"
            ContentTemplate="{DataTemplate views:ListPage}"
            Route="ListPage" />
    </TabBar>

</Shell>
